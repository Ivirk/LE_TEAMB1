    <p>This is the admin dashboard for the Sacred Heart of Jesus Parish information system.</p>

    @php
        use App\Models\CertificateRequest;

        $pendingCount = CertificateRequest::where('status', 'Pending')->count();
        $approvedCount = CertificateRequest::where('status', 'Approved')->count();
        $rejectedCount = CertificateRequest::where('status', 'Rejected')->count();
    @endphp

    <div class="dashboard">
        <div class="box">
            <div class="count">{{ $pendingCount }}</div>
            <div class="label">Pending Requests</div>
            <a href="{{ route('admin.certificaterequests.pending') }}" class="btn-view">View</a>
        </div>

        <div class="box">
            <div class="count">{{ $approvedCount }}</div>
            <div class="label">Approved Requests</div>
            <a href="{{ route('admin.certificaterequests.approved') }}" class="btn-view">View</a>
        </div>

        <div class="box">
            <div class="count">{{ $rejectedCount }}</div>
            <div class="label">Rejected Requests</div>
            <a href="{{ route('admin.certificaterequests.rejected') }}" class="btn-view">View</a>
        </div>
    </div>

@endsection
