    @if($requests->count() > 0)
        @foreach($requests as $request)
            <div class="card">
                <h3>{{ $request->owner_name }} ({{ $request->type }})</h3>
                <p><strong>Reason:</strong> {{ $request->reason }}</p>
                <p><strong>Status:</strong> {{ $request->status }}</p>
                <p><strong>Date Requested:</strong> {{ $request->date_requested->format('F d, Y') }}</p>

                <!-- Approve/Decline form -->
                <form action="{{ route('admin.certificaterequests.update', $request->request_id) }}" method="POST" class="action-buttons">
                    @csrf
                    <button type="submit" name="action" value="approve" class="action-btn approve">Approve</button>
                    <button type="submit" name="action" value="decline" class="action-btn decline">Decline</button>
                </form>
            </div>
        @endforeach
    @else
        <p>No pending certificate requests found.</p>
    @endif
@endsection
