<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

class CertificateRequest extends Model
{
    use HasFactory;

    protected $table = 'CertificateRequests';
    protected $primaryKey = 'request_id';
    public $incrementing = true;
    protected $keyType = 'int';
    public $timestamps = false;

    protected $fillable = [
        'parishioner_id',
        'admin_id',
        'type',           // 'Baptismal' or 'Confirmation'
        'owner_name',
        'father_name',
        'mother_name',
        'reason',         // field for reason/purpose
        'date_requested',
        'status',         // 'Pending','Approved','Rejected'
        'date_approved',
    ];

    protected $casts = [
        'date_requested' => 'datetime',
        'date_approved'  => 'datetime',
    ];

    // Relationships
    public function parishioner()
    {
        return $this->belongsTo(Parishioner::class, 'parishioner_id', 'parishioner_id');
    }

    public function admin()
    {
        return $this->belongsTo(Administrator::class, 'admin_id', 'admin_id');
    }
}
