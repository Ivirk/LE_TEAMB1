<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

class Administrator extends Model
{
    use HasFactory;

    protected $table = 'Administrator';
    protected $primaryKey = 'admin_id';
    public $incrementing = true;
    protected $keyType = 'int';
    public $timestamps = false;

    protected $fillable = [
        'name',
        'email',
        'contact_number',
        'username',
        'password',
    ];

    protected $hidden = ['password'];

    public function baptismalRecords()
    {
        return $this->hasMany(BaptismalRecord::class, 'admin_id', 'admin_id');
    }

    public function confirmationRecords()
    {
        return $this->hasMany(ConfirmationRecord::class, 'admin_id', 'admin_id');
    }

    public function certificateRequests()
    {
        return $this->hasMany(CertificateRequest::class, 'admin_id', 'admin_id');
    }
}
