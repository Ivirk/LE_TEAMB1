<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

class BaptismalRecord extends Model
{
    use HasFactory;

    protected $table = 'BaptismalRecords';
    protected $primaryKey = 'baptismalrecord_id';
    public $incrementing = true;
    protected $keyType = 'int';
    public $timestamps = false;

    protected $fillable = [
        'admin_id',
        'full_name',
        'date_baptism',
        'place_baptism',
        'father_name',
        'mother_name',
        'godfather',
        'godmother',
        'priest_name',
    ];

    protected $dates = ['date_baptism'];

    public function admin()
    {
        return $this->belongsTo(Administrator::class, 'admin_id', 'admin_id');
    }
}
