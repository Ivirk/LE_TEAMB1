<?php

namespace App\Http\Controllers\User;

use App\Http\Controllers\Controller;
use Illuminate\Support\Facades\Session;
use App\Models\CertificateRequest;
use App\Models\BaptismalRecord;
use App\Models\ConfirmationRecord;
use Barryvdh\DomPDF\Facade\Pdf; // <- Laravel DomPDF wrapper

class UserCertificateGenerateController extends Controller
{
    // Show certificate preview page
    public function preview($id)
    {
        $userId = Session::get('parishioner_id');

        $cert = CertificateRequest::where('request_id', $id)
            ->where('parishioner_id', $userId)
            ->where('status', 'Approved')
            ->firstOrFail();

        $record = $this->getRecord($cert);

        return view('user.certificate_preview', compact('cert', 'record'));
    }

    // Generate & download PDF
    public function download($id)
    {
        $userId = Session::get('parishioner_id');

        $cert = CertificateRequest::where('request_id', $id)
            ->where('parishioner_id', $userId)
            ->where('status', 'Approved')
            ->firstOrFail();

        $record = $this->getRecord($cert);

        // Use Laravel DomPDF wrapper
        $pdf = Pdf::loadView('pdf.certificate_layout', compact('cert', 'record'))
            ->setPaper('A4', 'portrait');

        return $pdf->download("Certificate_{$cert->type}_{$cert->owner_name}.pdf");
    }

    // Get the associated Baptismal or Confirmation record
    private function getRecord($cert)
    {
        if ($cert->type === 'Baptismal') {
            return BaptismalRecord::whereRaw('UPPER(full_name) = UPPER(?)', [$cert->owner_name])
                ->firstOrFail();
        }

        return ConfirmationRecord::whereRaw('UPPER(full_name) = UPPER(?)', [$cert->owner_name])
            ->firstOrFail();
    }
}
