<?php

namespace App\Http\Controllers\User;

use App\Http\Controllers\Controller;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Session;
use App\Models\CertificateRequest;
use App\Models\Parishioner;

class UserCertificateController extends Controller
{
    // Show the request form
    public function showRequestForm()
    {
        $user = Parishioner::find(Session::get('parishioner_id'));
        return view('user.request_certificate', compact('user'));
    }

    // Submit a new certificate request
    public function submitRequest(Request $request)
    {
        $request->validate([
            'type' => 'required|string',
            'owner_name' => 'required|string|max:100',
            'father_name' => 'nullable|string|max:100',
            'mother_name' => 'nullable|string|max:100',
            'reason' => 'required|string|max:255',
        ]);

        CertificateRequest::create([
            'parishioner_id' => Session::get('parishioner_id'),
            'type' => $request->type,
            'owner_name' => $request->owner_name,
            'father_name' => $request->father_name,
            'mother_name' => $request->mother_name,
            'reason' => $request->reason,
            'date_requested' => now(),
            'status' => 'Pending',
        ]);

        return redirect()->route('user.certificates.track')
            ->with('success', 'Certificate request submitted successfully.');
    }

    // Track user's own certificate requests
    public function track(Request $request)
    {
        $userId = Session::get('parishioner_id');
        $search = $request->input('search', '');

        $user = Parishioner::find($userId);

        $certificates = CertificateRequest::where('parishioner_id', $userId)
            ->where('owner_name', 'like', "%{$search}%")
            ->orderBy('date_requested', 'desc')
            ->paginate(10);

        return view('user.track_certificate', compact('certificates', 'search', 'user'));
    }
}
