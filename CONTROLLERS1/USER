<?php

namespace App\Http\Controllers\User;

use App\Http\Controllers\Controller;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Session;
use Illuminate\Support\Facades\Hash;
use App\Models\Parishioner;

class UserAuthController extends Controller
{
    /**
     * Show the login form.
     */
    public function showLoginForm()
    {
        // Redirect to dashboard if already logged in
        if (Session::has('username') && Session::get('role') === 'user') {
            return redirect()->route('user.dashboard');
        }

        return view('user.login');
    }

    /**
     * Handle user login.
     */
    public function login(Request $request)
    {
        $credentials = $request->validate([
            'username' => 'required|string',
            'password' => 'required|string',
        ]);

        $user = Parishioner::where('username', $credentials['username'])->first();

        if ($user && Hash::check($credentials['password'], $user->password)) {
            // Store user info in session
            Session::put('username', $user->username);
            Session::put('parishioner_id', $user->parishioner_id);
            Session::put('role', 'user');

            // Regenerate session ID to prevent fixation attacks
            $request->session()->regenerate();

            return redirect()->route('user.dashboard');
        }

        return back()->withErrors([
            'login' => 'Account does not exist or password is incorrect.'
        ])->withInput($request->only('username'));
    }

    /**
     * Logout the user.
     */
    public function logout(Request $request)
    {
        // Clear all session data
        Session::flush();

        // Regenerate session ID for security
        $request->session()->regenerate();

        // Redirect to home page instead of login
        return redirect()->route('home')->with('success', 'You have been logged out.');
    }
}
